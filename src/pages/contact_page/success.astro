---
import Layout from "../../layouts/Layout.astro";
const response = await fetch('https://uselessfacts.jsph.pl/api/v2/facts/random')
const data = await response.json();
//text source_url
---

<Layout title="success">
    <div class="bg-secondary/10 rounded-md h-full flex flex-col justify-evenly items-center">
        <div class="p-2 flex flex-col justify-center items-center gap-4">
            <h1 class="font-extrabold text-6xl">Thank you for your message</h1>
            <p class="font-extralight text-lg">I will reply as soon as I can</p>
        </div>
        <div class="p-2 flex flex-col justify-center items-center">
            <p class="font-extralight text-lg">did you know:</p>
            <p class="font-extralight">{data.text}</p>
        </div>
    </div>
</Layout>