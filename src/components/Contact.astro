<section
  class="grid grid-cols-1 md:grid-cols-3 grid-rows-6 md:grid-rows-4 w-full h-full gap-2"
>
  <div
    class="bg-secondary/10 col-span-1 md:col-span-full rounded-md row-span-1"
  >
    Lorem ipsum dolor sit amet consectetur adipisicing elit. Ab, asperiores?
  </div>
  <div class="bg-secondary/10 col-span-1 rounded-md row-span-2 md:row-span-3">
    Lorem ipsum dolor sit amet consectetur adipisicing elit. Facilis, doloribus.
  </div>
  <form
    class="flex flex-col gap-1 col-span-1 md:col-span-2 row-span-3 rounded-md bg-secondary/10 w-full h-full space-y-2 justify-center items-center"
    action="https://api.staticforms.xyz/submit"
    method="post"
  >
    <!-- Replace with accesKey sent to your email -->
    <input
      type="hidden"
      name="accessKey"
      value="aef99a81-e7da-45fd-8f61-1dab153d515c"
    />
    <!-- Required -->
    <input
      class="contact_input py-2 px-6"
      placeholder="Name"
      type="text"
      name="name"
      id="name"
      required
    />
    <input
      class="contact_input py-2 px-6"
      placeholder="Subject"
      type="text"
      name="subject"
      id="subject"
      required
    />
    <input
      class="contact_input py-2 px-6"
      placeholder="Email address"
      type="text"
      name="email"
      id="email"
      required
    />
    <input
      class="contact_input py-2 px-6"
      placeholder="Phone"
      type="text"
      name="phone"
      id="phone"
    />
    <textarea
      class="contact_input py-2 px-6 resize-y"
      placeholder="Message"
      name="message"
      id="message"
      required></textarea>
    <!-- Optional -->
    <!-- If you want form to redirect to a specific url after submission -->
    <input
      type="hidden"
      name="redirectTo"
      value="https://example.com/contact/success"
    />
    <!-- Optional -->
    <button
      class="w-fit bg-secondary px-3 py-1 text-text hover:bg-secondary/70 hover:rounded-xl transition-all duration-300 rounded-md text-lg"
      type="submit">Submit</button
    >
    <input type="text" name="honeypot" style="display: none;" />
  </form>
</section>
